<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="Sungaila.SoundReaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:Sungaila.SoundReaver"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Sungaila.SoundReaver.ViewModels"
        Title="SoundReaver"
        mc:Ignorable="d">
    <Window.SystemBackdrop>
        <local:MicaTintedBackdrop Alpha="60" TintColor="{StaticResource AccentColorSpectral}" />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar Title="SoundReaver" />

        <Frame x:Name="RootFrame"
               Grid.Row="1" />
    </Grid>
</Window>
